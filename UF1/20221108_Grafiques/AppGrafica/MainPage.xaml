<Page
    x:Class="AppGrafica.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppGrafica"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:view="using:AppGrafica.View" xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <StackPanel Orientation="Horizontal" >

        <view:UIGrafica x:Name="uig" HorizontalAlignment="Stretch"></view:UIGrafica>
        <controls:DataGrid x:Name="lsvValors" IsEnabled="True" IsReadOnly="False">

        </controls:DataGrid>

        <Button Click="Button_Click" x:Name="btnPause" Content="Pause"></Button>
        
    </StackPanel>
</Page>
